
    <p id="notice"><%= notice %></p>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <h4 class="c-grey-900 mB-20">Usuários</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Email</th>
                            <th scope="col">Idade</th>
                            <th scope="col">Respostas</th>
                            <th> </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- @employees.each do |employee| %>
                        <tr>
                            <th scope="row"><%= link_to employee.id, employee%></th>
                            <td><%= employee.name %></td>
                            <td><%= employee.email %></td>
                            <td><%= (Time.now.year.to_i - employee.born.year.to_i) %></td>
                            <td><%= link_to employee.replies.count, '#'%></td>
                            <td><%= link_to 'Editar', edit_company_employee_path(employee.company, employee) %></td>
                            <td><%= link_to 'Deletar', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>  
                    </tbody>
                </table>
            </div>
            <% if @company %>
              <%= link_to 'Cadastrar Usuário', new_company_employee_path(@company), class: 'btn btn-success' %>
						<% else %>
              <%= link_to 'Ir para empresas', '/companies', class: 'btn btn-success' %>
            <% end %>
        </div>
    </div>
</div>
</div>



