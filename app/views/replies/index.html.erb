
    <p id="notice"><%= notice %></p>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <h4 class="c-grey-900 mB-20"><%= @question.name %> </h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Usuário</th>
                            <th scope="col">Respondido em</th>
                            <th scope="col">Idade Biológica</th>
                            <th scope="col">Idade Qualidade</th>
                            <th> </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- @replies.each do |reply| %>
                            <tr>
															<td><%= link_to reply.employee.name, question_reply_path(@question, reply) %> </td>
															<td> <%= reply.end_at.to_s(:pt_time) if reply.end_at %> </td>
															<td> <%= reply.employee.years * -1 %> </td>
															<td> <%= reply.reply_options.map(&:weight).sum %> </td>
															<td><%= link_to 'Deletar Resposta', delete_reply_path(reply) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <%= link_to 'Ir para empresas', '/companies', class: 'btn btn-success' %>
        </div>
    </div>
</div>
</div>



