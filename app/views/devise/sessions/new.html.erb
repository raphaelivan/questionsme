<body class="app">
    <div class="peers ai-s fxw-nw h-100vh">
        <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" ></div>
        <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style="min-width:320px">
            <h4 class="fw-300 c-grey-900 mB-40">Acessar Painel</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
              <div class="form-group">
                <%= f.label :email, class: "text-normal text-dark" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: true, class: "form-control", placeholder:"Email" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "text-normal text-dark" %><br />
                <%= f.password_field :password, class: "form-control", placeholder:"Informe sua senha" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <div class="peers ai-c jc-sb fxw-nw">
                      <div class="peer">
                        <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                          <%= f.check_box :remember_me, class: 'peer' %>
                          <%= f.label :remember_me %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>     

                <div class="actions">
                  <%= f.submit "Acessar", class: 'btn btn-lg btn-primary' %>
                </div>     
              <% end %> 
              <%= render "devise/shared/links" %>      
            </div>
        </div>
    </div>
</body>
